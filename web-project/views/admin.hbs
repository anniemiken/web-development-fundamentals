<h2>Upload new blogpost</h2>
{{#if errors.length}}
<p>Couldn't create post because:</p>
<ul>
    {{#each errors}}
    <li>{{this}}</li>
    {{/each}}
</ul>
{{/if}}
<form method="post" action="/blogpost/admin" class="form-group" id="guest">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <label class="form-label" for="input-example-1">Title</label>
    <input class="form-input" type="text" id="input-example-1" name="title" placeholder="Title">
    <label class="form-label" for="input-example-3">Message</label>
    <textarea class="form-input" id="input-example-3" placeholder="Textarea" name="content" rows="5" ></textarea>
    <br>
    <input type="submit" class="btn btn-primary" value="Post">
</form>
