<p>Welcome to my website, my name is Annie Johansson and I am a software engineering student</p>
<h2>Daily posts</h2>
{{#if posts.length}}
    {{#each posts}}
    <div class="box-post">
      <h3>#{{id}} {{atitle}}</h3>
      <p>{{acontent}}</p>
      {{#if ../isLoggedIn}}
      <form method="post" action="/update-posts/{{id}}">
        <input type="submit" class="btn btn-success" value="Update post">
      </form> 
      <form method="post" action="/delete-posts/{{id}}">
        <input type="submit" class="btn btn-error" value="Delete post">  
      </form>   
      {{/if}}
    </div>
    {{/each}}
{{else}}
  <p>No posts exist.</p>
{{/if}}
